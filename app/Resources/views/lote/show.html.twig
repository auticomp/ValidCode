{% extends 'base.html.twig' %}

{% block body %}


<div class="row">

	<div class="col-md-12">
		<h3>
			Home > <a href="{{ path('lote_index') }}">Listagem de Lotes</a> / <a
				href="">Cadastro de Lote</a>
		</h3>
		<hr />
	</div>

	<div class="col-md-12 text-right">
		<a class="btn btn-primary btn-sm" href="{{ path('lote_index') }}"> <i
			class="fa fa-backward"></i> Voltar para a Lista
		</a>
	</div>

	<div class="col-md-12">
		<hr />
		<div class="col-lg-12">
			<div class="col-lg-12">
				<div class="col-lg-4">
					<label>ID Lote</label>
					<div>{{ lote.idLote }}</div>
				</div>
				<div class="col-lg-4">
					<label>Nome do Lote:</label>
					<div class="col-lg-12">{{ lote.nomeLote }}</div>
				</div>
				<div class="col-lg-4">
					<label>Dt. Cadastro</label>
					<div>{% if lote.dtCadastro %}{{ lote.dtCadastro|date('Y-m-d H:i:s')
						}}{% endif %}</div>
				</div>
				<div class="col-lg-4">
					<label>Atde. Itens Coletados</label>
					<div>{{ lote.qtdeItensColetados }}</div>
				</div>
				<div class="col-lg-4">
					<label>Limite de Itens</label>
					<div>{{ lote.limiteItens }}</div>
				</div>
				<div class="col-lg-4">
					<label>Dt. Fechamento</label>
					<div>{% if lote.dtFechamento %}{{ lote.dtFechamento|date('d/m/Y H:i:s') }}{% endif %}</div>
				</div>
				<div class="col-lg-4">
					<label>Dt. Exclus&atilde;o</label>
					<div>{% if lote.dtExclusao %}{{ lote.dtExclusao|date('d/m/Y H:i:s')
						}}{% endif %}</div>
				</div>
				<div class="col-lg-4">
					<label>Ativo?</label>
					<div>{% if lote.ativo == 1 %} Sim {% else %} N&atilde;o {% endif %}</div>
				</div>
			</div>
		</div>
	</div>

	<!-- //Area de Auxilio -->
	<div class="col-lg-12">
		<hr> 
		<div class="col-lg-12 justfied-buttons">
			<div class="col-lg-3 ">
				<a class="btn btn-primary btn-lg"
					href="{{ path('lote_edit', { 'id': lote.idLote }) }}"> <i
					class="fa fa-edit"></i> Editar
				</a>
			</div>
			<div class="col-lg-3 text-center">
				<button class="btn btn-lg btn-default">
					<i class="fa fa-copy ">&nbsp;</i> Clonar Itens
				</button>
			</div>
			<div class="col-lg-3 text-center">
				<button class="btn btn-lg btn-default">
					<i class="fa fa-download">&nbsp;</i>  Exportar Itens
				</button>
			</div>
			<div class="col-lg-3 text-right">
				<button class="btn btn-lg btn-success">
					<i class="fa fa-check">&nbsp;</i> Finalizar Lote
				</button>
			</div>
		</div>
	</div>
	
	<div class="col-lg-12">
		<br />
		<div class="col-lg-12 justfied-buttons">
			<div class="col-lg-3 ">
				<a class="btn btn-primary btn-lg"
					href="{{ asset('itenslote') }}"> 
					<i class="fa fa-ellipsis-v ">&nbsp;</i> Visualizar Itens
				</a>
			</div>
			<div class="col-lg-3 text-center">
				<button class="btn btn-lg btn-default">
					<i class="fa fa-mobile-phone">&nbsp;</i> Dispositivos
				</button>
			</div>
			<div class="col-lg-3 text-center">
				<button class="btn btn-lg btn-default">
					<i class="fa fa-upload">&nbsp;</i>  Importar Itens
				</button>
			</div>
			<div class="col-lg-3 text-right">
				{{ form_start(delete_form, { 'attr' :{'onclick':'return confirm("Tem certeza que quer remover o registro?")'}}) }}
				<button class="btn btn-danger btn-lg" type="submit" value="Delete">
					<i class="fa fa-remove">&nbsp;</i> Excluir Lote
				</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>
	
	

</div>

{% endblock %}
