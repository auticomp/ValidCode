{% extends 'base.html.twig' %}

{% block body %}
<div class="row">

	<div class="col-lg-12 col-md-12">
		<h3>
			Home > <a href="{{ path('empresa_index') }}">Listagem de Empresas</a> / <a
				href="">Cadastro de Empresa</a>
		</h3>
		<hr />
	</div>

	<div class="col-lg-12 col-md-12 text-right">
		<a class="btn btn-primary btn-sm" href="{{ path('empresa_index') }}"> <i
			class="fa fa-mail-reply"></i> Voltar para a Lista
		</a>
	</div>
	
	<div class="col-lg-12 col-md-12">
		<hr />
		<div class="col-lg-6">
			{{ form_start(form) }} 
			
			{{ form_widget(form) }}

			<div class="col-lg-12 text-right">
				<hr />
				<button class="btn btn-default btn-md" type="reset" value="Limpar">
					<i class="fa fa-eraser"></i> Limpar
				</button>
				<button class="btn btn-primary btn-md" type="submit" value="Create"
					data-loading-text="Salvando...">
					<i class="fa fa-save"></i> Salvar
				</button>
			</div>
			{{ form_end(form) }}
		</div>
		<div class="col-lg-6">
			{% if app.session.flashBag.has('error') %}
				<div class="alert alert-danger alert-dismissible" role="alert">
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				  {% for msg in app.session.flashBag.get('error') %}
			        <p>{{ msg }}</p>
			      {% endfor %}
				</div>
		    {% endif %}
		</div>

	</div>
	
</div>
   
{% endblock %}
