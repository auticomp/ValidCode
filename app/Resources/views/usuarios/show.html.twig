{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuarios</h1>

    <table>
        <tbody>
            <tr>
                <th>Emailusuario</th>
                <td>{{ usuario.emailUsuario }}</td>
            </tr>
            <tr>
                <th>Senhausuario</th>
                <td>{{ usuario.senhaUsuario }}</td>
            </tr>
            <tr>
                <th>Dtcadastro</th>
                <td>{% if usuario.dtCadastro %}{{ usuario.dtCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ativo</th>
                <td>{{ usuario.ativo }}</td>
            </tr>
            <tr>
                <th>Idusuario</th>
                <td>{{ usuario.idUsuario }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuarios_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usuarios_edit', { 'id': usuario.idUsuario }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
