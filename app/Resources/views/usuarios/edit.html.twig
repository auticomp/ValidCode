{% extends 'base.html.twig' %}

{% block body %}
<div class="row">

	<div class="col-md-12">
		<h3>
			Home > <a href="{{ path('usuarios_index') }}">Listagem de Usuários</a> / <a
				href="">Edição de Usuario</a>
		</h3>
		<hr />
	</div>


	<div class="col-lg-6">
		
	</div>

	<div class="col-lg-6 text-right">
		<a class="btn btn-primary btn-sm" href="{{ path('usuarios_index') }}"> <i
			class="fa fa-backward"></i> Voltar para a Lista
		</a>
	</div>

	<div class="col-lg-12">
		<hr />
		<div class="col-lg-4"></div>
		<div class="col-lg-8">
			{{ form_start(edit_form) }} 
			
				{{ form_widget(edit_form) }}

			<hr />
			<div class="col-lg-6">
				<button class="btn btn-default btn-sm" type="reset" value="Limpar">
					<i class="fa fa-eraser"></i> Limpar
				</button>
				<button class="btn btn-primary btn-sm" type="submit" value="Create"
					data-loading-text="Salvando...">
					<i class="fa fa-save"></i> Salvar
				</button>
			</div>
			{{ form_end(edit_form) }}
			<div class="col-lg-6 text-right">
				{{ form_start(delete_form) }}
		           <button class="btn btn-danger btn-sm" type="submit" value="Delete">
		           		<i class="fa fa-times"></i> Excluir
		           </button>
		        {{ form_end(delete_form) }}
			</div>
		</div>


	</div>

</div>



   
   
{% endblock %}
