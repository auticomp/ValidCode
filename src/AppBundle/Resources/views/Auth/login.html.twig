{% extends "::auth.html.twig" %} 

{% block title %}Acesso :: ValidCode{% endblock %} 

{% block body %}

<div class="row">

	<div class="col-lg-12">
		<h3>Acesso Restrito</h3>
		<hr>
	</div>

	<div class="col-lg-6 col-lg-offset-3">
		<form class="horizontal-form" action="{{ asset('app_dev.php/Login') }}" method="post" enctype="application/x-www-form-urlencoded">
		 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
		<div class="col-lg-12">
			<label>E-Mail</label>
			<input type="email" class="form-control" name="_username" id="username" value="{{ last_username }}" />
		</div>
		<div class="col-lg-12">
			<label>Senha</label>
			<input type="password" class="form-control" name="_password" id="password" />
		</div>
		
		<div class="col-lg-6">
			<br>
			  <div class="checkbox">
			    <label>
			      <input type="checkbox" name="naoesquecer" id="naoesquecer"> N&atilde;o esquecer
			    </label>
			  </div>
			  <a href="{{ asset('forgot') }}" class="btn btn-link">
			  	<i class="fa fa-link"></i> Esqueceu a senha?
			  </a>
		</div>
		
		
		<div class="col-lg-6 text-right">
			<br>
			<button type="submit" class="btn btn-primary btn-lg" name="btnLogin" id="btnLogin">
				<i class="fa fa-sign-in"></i> Entrar
			</button>
		</div>
		
		</form>
		
		
	</div>
	
	{% if error %}
	<div class="col-lg-12">
	<br>
	<div class="alert alert-danger alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span></button>
		
		<p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
		<br >
	</div>
	{% endif %}
</div>
	
</div>

	

	
	
	


{% endblock %}

{% block javascripts %}

{% endblock %}
